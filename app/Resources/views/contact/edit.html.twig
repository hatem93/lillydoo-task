{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit contact</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a class="dropdown-item" href="#">Settings 1</a>
                            </li>
                            <li><a class="dropdown-item" href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                {{ form_start(edit_form) }}
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">First Name <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.firstName, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Last Name <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.lastName, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Email <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.emailAddress, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Street <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.street, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">City <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.city, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">County <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.country, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">ZipCode/PostalCode <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.zip, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Birthday <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.birthday, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Phone Number <span
                                class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.phoneNumber, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Picture
                    </label>
                    <div class="col-md-6 col-sm-6 ">
                        {{ form_widget(edit_form.picture, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="item form-group">
                    <div class="col-md-12 col-sm-12 offset-md-3">
                        <div class=" row">
                            <button type="button" onclick = "window.location.href = '{{ path('contact_index') }}'" class="btn btn-success btn-round">
                                Back to Address Book
                            </button>
                            <button class = "btn btn-primary btn-round" type="submit" value="Edit">Edit</button>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
