{% extends 'base.html.twig' %}

{% block body %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Address Book</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <a class="btn btn-success btn-lg btn-round" href="{{ path('contact_new') }}">Add New Contact</a>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="x_panel">
                <div class="x_content">
                    <br><br>
                    <div class="clearfix"></div>
                    {% for contact in contacts %}
                        <div class="col-md-4 col-sm-4  profile_details">
                            <div class="well profile_view" style="height: 100%;width: 100%;">
                                <div class="col-sm-12">
                                    <h4 class="brief"><i id="profile_email">{{ contact.emailAddress }}</i></h4>
                                    <div class="left col-md-7 col-sm-7">
                                        <h2>{{ contact.firstName }}  {{ contact.lastName }}</h2>
                                        <ul class="list-unstyled">
                                            <li><i class="fa fa-building"></i> Address: {{ contact.street }}</li>
                                            <li><i class="fa fa-phone"></i> Phone #: {{ contact.phoneNumber }}</li>
                                        </ul>
                                    </div>
                                    <div class="right col-md-5 col-sm-5 text-center">
                                        <img src="{{ contact.picture }}" alt="" class="img-circle img-fluid">
                                    </div>
                                </div>
                                <div class=" profile-bottom text-center">
                                    <div class=" col-sm-12 emphasis">
                                        <a href="{{ path('contact_show', { 'id': contact.id }) }}" class="btn btn-primary btn-sm btn-round">
                                            <i class="fa fa-user"> </i> View Profile
                                        </a>
                                        <a href="{{ path('contact_edit', { 'id': contact.id }) }}" class="btn btn-success btn-sm btn-round edit-profile">
                                            <i class="fa fa-user"> </i> Edit Profile
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
